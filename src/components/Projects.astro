---
import GitHub from "./icons/GitHub.astro"

import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import JavaScript from "./icons/JavaScript.astro"
import React from "./icons/React.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Sass from "./icons/Sass.astro"
import Node from "./icons/Node.astro"
import Express from "./icons/Express.astro"
import Handlebars from "./icons/Handlebars.astro"
import Firebase from "./icons/Firebase.astro"

import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-[#571E00] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#004259] text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#595400] text-white",
    icon: JavaScript,
  },
  REACT: {
    name: "React",
    class: "bg-[#002D59] text-white",
    icon: React,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#3E0059] text-white",
    icon: Bootstrap,
  },
  SASS: {
    name: "Sass",
    class: "bg-[#59003F] text-white",
    icon: Sass,
  },
  NODE: {
    name: "Node",
    class: "bg-[#095900] text-white",
    icon: Node,
  },
  EXPRESS: {
    name: "Express",
    class: "bg-[#00572F] text-white",
    icon: Express,
  },
  HANDLEBARS: {
    name: "Handlebars",
    class: "bg-[#593000] text-white",
    icon: Handlebars,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#593E00] text-white",
    icon: Firebase,
  },
}

const PROJECTS = [
  {
    title: "GiGames - ¡Compra tus videojuegos favoritos al mejor precio!",
    description:
      "Tienda en línea ficticia dedicada a la venta de videojuegos en formato físico. Hecho para el curso de 'React JS' de Coderhouse.",
    link: "https://gigames.netlify.app/",
    github: "https://github.com/CirmiFrancis/coderhouse-reactjs",
    image: "/projects/gigames.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP, TAGS.FIREBASE],
  },
  {
    title: "MiniGarden - ¡Descubre el arte de los jardines en miniatura!",
    description:
      "Sitio web estático de un emprendimiento ficticio dedicado a la venta de jardines en miniatura. Hecho para el curso de 'Desarrollo Web' de Coderhouse.",
    link: "https://cirmifrancis.github.io/coderhouse-desarrollo-web/",
    github: "https://github.com/CirmiFrancis/coderhouse-desarrollo-web",
    image: "/projects/minigarden.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.SASS, TAGS.BOOTSTRAP],
  },
  {
    title: "Items List - ¡Anota y organiza tus actividades!",
    description:
      "Herramienta que permite manipular ítems (notas). Posee varias funcionalidades que mejoran la experiencia del usuario. ¡Te invito a probarlo!",
    link: "https://cirmifrancis.github.io/javascript-items-list/",
    github: "https://github.com/CirmiFrancis/javascript-items-list",
    image: "/projects/itemslist.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.BOOTSTRAP],
  },
  {
    title: "Live Chat - ¡Escribe tu nombre y comienza a chatear!",
    description:
      "Chat sencillo para conversar en tiempo real con otras personas conectadas.",
    link: "https://cirmifrancis-livechat.glitch.me/",
    github: "https://github.com/CirmiFrancis/live-chat",
    image: "/projects/livechat.webp",
    tags: [TAGS.NODE, TAGS.EXPRESS, TAGS.HANDLEBARS],
  },
  {
    title: "Calculator - ¡Tu calculadora de confianza!",
    description:
      "Calculadora simple en la que puedes realizar operaciones matemáticas básicas.",
    link: "https://cirmifrancis.github.io/javascript-calculator/",
    github: "https://github.com/CirmiFrancis/javascript-calculator",
    image: "/projects/calculator.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.CSS, TAGS.HTML],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img alt=`Imagen de ${title}` class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>

            <footer class="flex items-end justify-start mt-4 gap-x-4">
                {github && (
                  <LinkButton href={github}>
                    <GitHub class="size-6" />
                    Code
                    
                  </LinkButton>
                )}
                {link && (
                  <LinkButton href={link}>
                    <Link class="size-4" />
                    Preview
                  </LinkButton>
                )}
              </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>